<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.MainPage"
             BackgroundColor="CornflowerBlue">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="15,15">
                <Label Text="Recent playlists" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                <CollectionView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame>
                                <Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*">
                                    <Image x:Name="PlaylistImage" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
                                    <Label x:Name="PlaylistName" Grid.Column="1" Grid.Row="0"/>
                                    <Label x:Name="PlaylistSongAmount" Grid.Column="1" Grid.Row="1"/>
                                    <Label x:Name="PlaylistAuthor" Grid.Column="1" Grid.Row="2"/>
                                    <Label x:Name="PlaylistLength" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Recent songs" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                <CollectionView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout WidthRequest="200">
                                <Frame>
                                    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
                                        <Image x:Name="SongImage" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
                                        <Label x:Name="SongName" Grid.Column="1" Grid.Row="0"/>
                                        <Label x:Name="SongAuthor" Grid.Column="1" Grid.Row="1"/>
                                    </Grid>
                                </Frame>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
        <Button Text="+" FontSize="65" Padding="0,-10,5,0" FontAttributes="Bold" WidthRequest="70" HeightRequest="70" HorizontalOptions="End" VerticalOptions="End" Margin="0,0,20,108" BackgroundColor="RoyalBlue"/>
        <Frame HeightRequest="100" BackgroundColor="RoyalBlue" CornerRadius="15" VerticalOptions="End" Margin="0,0,0,-10">
            
        </Frame>
    </Grid>
</ContentPage>
