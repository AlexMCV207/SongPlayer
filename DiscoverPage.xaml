<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.DiscoverPage"
             Title="DiscoverPage"
             Background="CornflowerBlue">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="15,15">
                <Label Text="Playlists" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                <CollectionView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame>
                                <Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*">
                                    <Image x:Name="PlaylistImage" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
                                    <Label x:Name="PlaylistName" Grid.Column="1" Grid.Row="0"/>
                                    <Label x:Name="PlaylistSongAmount" Grid.Column="1" Grid.Row="1"/>
                                    <Label x:Name="PlaylistAuthor" Grid.Column="1" Grid.Row="2"/>
                                    <Label x:Name="PlaylistLength" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Songs" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                <CollectionView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout WidthRequest="200">
                                <Frame>
                                    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
                                        <Image x:Name="SongImage" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
                                        <Label x:Name="SongName" Grid.Column="1" Grid.Row="0"/>
                                        <Label x:Name="SongAuthor" Grid.Column="1" Grid.Row="1"/>
                                    </Grid>
                                </Frame>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <Frame BorderColor="RoyalBlue" HeightRequest="130" BackgroundColor="RoyalBlue" CornerRadius="15" VerticalOptions="End" Margin="0,0,0,-10">
            <HorizontalStackLayout>
                <VerticalStackLayout>
                    <Label x:Name="SongCurrentName" Text="aaaaa" FontAttributes="Bold" FontSize="18"/>
                    <Label x:Name="SongCurrentPerformer" Text="bbbbb" FontSize="14"/>
                    <Label x:Name="SongCurrentTime" Text="0:00 / 0:00" FontAttributes="Bold" FontSize="18" Margin="5"/>
                    <ProgressBar x:Name="SongCurrentProgress" WidthRequest="260"/>
                </VerticalStackLayout>
                <Image x:Name="SongCurrentImage" WidthRequest="140" HeightRequest="100"/>
            </HorizontalStackLayout>
        </Frame>
    </Grid>
</ContentPage>